{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "Node",
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "types": ["vite/client"],
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@/*": ["./resources/js/*"]
        }
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.tsx",
        "resources/**/*.vue",
        "resources/js/store/breadcrumb.js",
        "resources/js/store/boards.js",
        "resources/js/store/calendarStore.js",
        "resources/js/store/errors.js",
        "resources/js/store/invoiceDetailsStore.js",
        "resources/js/store/progressBarStore.js",
        "resources/js/store/roleStore.js",
        "resources/js/store/singleUser.js",
        "resources/js/store/textToLinkStore.js",
        "resources/js/store/user.js",
        "resources/js/axios.js"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
